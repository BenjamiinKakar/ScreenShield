<Window x:Class="ScreenShield.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ScreenShield.UI.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
        Title="ScreenShield Control" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="{Binding ToggleProtectionButtonText}" 
                    Command="{Binding ToggleProtectionCommand}" 
                    Padding="20,10"
                    FontSize="16"
                    MinWidth="200"/>
            <TextBlock Text="{Binding StatusText}" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,0"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>